BoxLayout:
    orientation: 'vertical'
    BoxLayout
        TextInput:
            id: miles_input
            text: '7'
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: down
                text: 'Down'
                on_press: app.handle_decrement(-1)
    Button:
        text: 'Convert mile/s to km/s'
        on_press: app.handle_conversion(miles_input.text)
    Label:
        id: output_label
        text: ''